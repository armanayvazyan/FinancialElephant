<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".ChooserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:id="@+id/mainContainer">


        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/companyChooserContainer"
            android:background="@drawable/layout_rounded_corners"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Company"
                android:layout_centerVertical="true"
                android:id="@+id/chooseCompanyTxt"
                android:textSize="18dp"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/chooseCompanyBtn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_add"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/attributeChooserContainer"
            android:background="@drawable/layout_rounded_corners">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Attributes"
                android:layout_centerVertical="true"
                android:id="@+id/chooseAttributesTxt"
                android:textSize="18dp"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:id="@+id/chooseAttributesBtn"
                android:src="@drawable/ic_add"/>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>