<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/layout_rounded_corners_for_dialog"
    android:padding="10dp">

    <TextView
        android:id="@+id/chooserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="?attr/colorDialogButtonText"
        android:text="Choose Example"
        android:textSize="25sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chooserRecView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/chooserText"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/chooserText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/layout_rounded_corners"
        android:foregroundGravity="bottom"
        android:text="Confirm"
        android:textColor="?attr/colorButtonText" />

</RelativeLayout>